# These are sample values!

spring.application.name=servermanager
server.port=8088

# Datasource settings
spring.datasource.url=jdbc:mysql://localhost:3306/db?useSSL=false&allowPublicKeyRetrieval=True
spring.datasource.username=user
spring.datasource.password=somepassword

# JPA / Hibernate settings
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.format_sql=true

# Swagger settings
springdoc.api-docs.path=somepath
springdoc.swagger-ui.disable-swagger-default-url=true
springdoc.swagger-ui.path=somepath

# External url for the backend (for CORS)
url.external=myurl

jwt.secret=somesecret

# Multipart limits (safe for several MB)
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

# Tomcat timeouts (in milliseconds)
server.connection-timeout=90000

spring.ai.mcp.server.name=home-mcp-server
spring.ai.mcp.server.version=0.0.1

ollama.base-url=http://192.168.0.1:11434
ollama.chat.model=qwen-mcp:latest

homeassistant.base-url=http://192.168.0.1:8123
homeassistant.token=sometoken